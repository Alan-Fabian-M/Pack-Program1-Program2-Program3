unit FuncionesDeCadenas;

interface

function EsVocal (x:char): boolean ;
function ContEsp (x:string):byte;
function ContVoc (x:string): byte;


implementation
 function EsVocal (x:string): byte;


 begin




 end;

 function ContEsp (x:string): byte;
 var i, c, n:byte;


 begin
  c:=0;
  n:= length(x);
  i:= 1;
  while i<=n  do
   begin
    if x[i] = ' ' then
      begin
       c:= c+1;

      end;

    i:= i+1;

   end;


  ContEsp := c;


 end;

 function ContVoc (x:string): byte;



 begin



 end;

end.
