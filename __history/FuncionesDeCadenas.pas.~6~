unit FuncionesDeCadenas;

interface

function EsVocal (x:char): boolean ;
function ContEsp (x:string):byte;
function ContVoc (x:string): byte;

function ElimEsp (x:string):string ;


implementation
function ElimEsp  (x:string):string ;
var n, i, c: cardinal;
begin
 n:= length(x);
 i:= 1;

  while i<=n do
  begin
    if x[i] = ' ' then  begin
     c:= c+1;
    end

    else begin
     i:=n;

    end;
    i:= i+1;

  end;
  delete(x,1,c);


  ElimEsp := x;

 end;
 function ContVoc (x:string): byte;
 var i, c,  n : Byte;

 begin
  i:= 1;
  c:= 0;
  n := length(x);
  while i<=n  do
   begin
    if EsVocal(x[i]) then
      begin
       c:= c+1;

      end;
     i:= i+1;
   end;

   ContVoc:= c;


 end;

 function ContEsp (x:string): byte;
 var i, c, n:byte;


 begin
  c:=0;
  n:= length(x);
  i:= 1;
  while i<=n  do
   begin
    if x[i] = ' ' then
      begin
       c:= c+1;

      end;

    i:= i+1;

   end;


  ContEsp := c;


 end;

 function EsVocal (x:char): boolean ;
 var voc: string;
 p: byte;
 begin
   voc := 'aeiouàèìòù';
   p:= pos(x,voc);
   EsVocal := p>0;


 end;
end.
